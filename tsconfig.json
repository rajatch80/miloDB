{
  "compilerOptions": {
    "outDir": "./dist", // Output directory
    "rootDir": "./src", // Source files
    "target": "ESNext", // Specify ECMAScript target
    "module": "CommonJS", // Module format
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // Include all source files
  "exclude": ["node_modules"]
}
